<!-- views/layouts/main.handlebars -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="User Authentication">
    <meta name="author" content="">
    <title>User Authentication</title>

    {{!-- font awesome import --}}
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" 
      integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

    {{!-- bootstrap import --}}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" 
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <script
      src="https://code.jquery.com/jquery-3.4.1.min.js"
      integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo="
      crossorigin="anonymous"></script>
    <style>
      .container {
        width: 100%;
        padding: 0px;
        margin: 0px;
      }
      .navigation-header {
        color: white !important;
        font-weight: bold;
      }
      .signFormContainer {
        margin: auto;
        width: 50%;
      }

      .signForm {
        font-size: 1.2em; 
      }

      .welcome-user {
        margin-right: 10px;
      }

      .user-name {
        font-weight: bold;
        color: white
      }

      .signForm {
        padding-top: 10px;
      }

      .formSubmitButton {
        width: 100%
      }

      .nav-link{
        color:white;
        border-radius: 10px;
      }

      .nav-link:hover {
        color:white;
        background-color:black;
      }

    </style>
  </head>
  <body>
    <nav class="navbar navbar-dark navbar-expand-sm bg-dark justify-content-between">
      <a href="/lobby" class="navbar-brand navigation-header" title="main lobby">Vus</a>
      
      <form class="form-inline">
        <div id="nav_button">
          <a class="nav-link" style='margin-right: 10px; float:right;' href="/vrmanager" title="Upload your personal VR space">Submit VR Space</a>
        </div>
        {{#if user}}
          <div class="dropdown">
              <div class="navbar-text welcome-user"> 
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{user.username}}</a>
                  <div class="dropdown-menu">
                      <button type="button" id="signOutButton" class="btn btn-light" onclick="location.href='/logout'">Profile</button> 
                      <button type="button" class="btn btn-light" onclick="location.href='/userconsole'">My Envs</button> 
                      <button type="button" class="btn btn-light" onclick="location.href='/logout'">Log Out</button> 
                  </div>
              </div>
              
          </div>
        {{else}}  
          <div id="nav_button">
            <a class="nav-link" style='margin-right: 10px;' href="/signin" title="Sign in">Sign In</a>
          </div>   
        {{/if}}
      </form>
    </nav>

    {{#if error}}
      <p class="alert alert-warning">{{error}}</p>
    {{/if}}

    {{#if notice}}
      <p class="alert alert-info">{{notice}}</p>
    {{/if}}

    <!--where our other templates will insert-->
    {{{body}}}

    <!-- Bootstrap core JavaScript
    ================================================== -->
    {{!-- major speed up in loading js file --}}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    
  </body>
</html>
