<div style="margin: 10px;padding:20px;">
    <div class="enclose">
        <h5><label>Device Code: </label> <label id="devicecode">hi</label></h5>
    </div>
    <div id="set_menu" class="set_menu" style="visibility: hidden;">
    </div>
</div>
<script>

    function getCookie(cname) {
      var name = cname + "=";
      var decodedCookie = decodeURIComponent(document.cookie);
      var ca = decodedCookie.split(';');
      for(var i = 0; i <ca.length; i++) {
        var c = ca[i];
        while (c.charAt(0) == ' ') {
          c = c.substring(1);
        }
        if (c.indexOf(name) == 0) {
          return c.substring(name.length, c.length);
        }
      }
      return "";
    }

    function setCookie(name,value) {
        var expires = "";
        document.cookie = name + "=" + (value || "")  + expires + "; path=/";
    }
    
    document.addEventListener('DOMContentLoaded', function() {
        if(getCookie('headsetLocalCode')){
            document.getElementById("devicecode").innerHTML = getCookie('headsetLocalCode');
        }
        else{
            var code = Math.floor((Math.random() * 1000000000) + 1).toString(24);
            setCookie('headsetLocalCode',code);   
            document.getElementById("devicecode").innerHTML = code;
        }
    }, false);


</script>
