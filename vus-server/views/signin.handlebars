<!-- views/signin.handlebars -->
<div class="jumbotron">
    <div class="signFormContainer">
        <h1>Sign In</h1>
        <form class="signForm" action="/login" method="post" >
            <div class="form-group">
                <label for="exampleInputEmail1">Username</label>
                <input type="text" class="form-control" name="username" placeholder="Enter username" required>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Enter password" required>
            </div>
            <button type="submit" class="btn btn-primary formSubmitButton">Login</button>
        </form>

        <div class="signin-options">
            <a href="/auth/google" title="Sign in with gmail" class="btn btn-danger btn-md" role="button"><i class="fas fa-envelope-square"></i></a>
            <a href="/auth/facebook" title="Sign in with facebook" class="btn btn-primary btn-md" role="button"><i class="fab fa-facebook"></i></a>
        </div>
        <div class="signup-options">
            New to Vus? <strong><a href="/signup" role="button">Sign Up Now</a></strong>
        </div>
    </div>
</div>
<style>
    .signin-options{
        padding: 20px 0px;
    }
    
</style>
